<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape
                    android:shape="ring"
                    android:thickness="@dimen/divider_size_level2"
                    android:innerRadius="@dimen/contentPadding_level2"
                    android:useLevel="false" >
                    <solid android:color="@color/colorActivateBtnNormal" />
                    <size android:height="@dimen/page_indicator_outer_size"
                        android:width="@dimen/page_indicator_outer_size" />
                </shape>
            </item>
            <item android:left="@dimen/contentPadding_level2"
                android:right="@dimen/contentPadding_level2"
                android:top="@dimen/contentPadding_level2"
                android:bottom="@dimen/contentPadding_level2">
                <shape android:shape="oval">
                    <size android:width="@dimen/page_indicator_inner_size"
                        android:height="@dimen/page_indicator_inner_size" />
                    <solid android:color="@color/colorActivateBtnNormal" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:left="@dimen/contentPadding_level1"
                android:right="@dimen/contentPadding_level1"
                android:top="@dimen/contentPadding_level1"
                android:bottom="@dimen/contentPadding_level1">
                <shape android:shape="oval">
                    <size android:width="@dimen/page_indicator_normal_size"
                        android:height="@dimen/page_indicator_normal_size" />
                    <solid android:color="@color/colorActivateBtnDisabled" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>