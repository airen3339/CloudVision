<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dp" />
            <gradient
                android:angle="270"
                android:centerColor="@color/colorLightGray"
                android:endColor="@color/colorLightGray"
                android:startColor="@color/colorLightGray" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dp" />
                <gradient
                    android:centerColor="@color/colorActivateBtnNormal"
                    android:endColor="@color/colorActivateBtnNormal"
                    android:startColor="@color/colorActivateBtnPressed" />

            </shape>
        </clip>
    </item>
</layer-list>