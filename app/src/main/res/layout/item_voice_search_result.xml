<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/contentPadding_level3">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_item_voice_search_result_img"
            android:layout_width="@dimen/voice_search_result_img_width"
            android:layout_height="@dimen/voice_search_result_img_height"
            android:scaleType="centerCrop"
            android:src="@drawable/default_img"
            android:contentDescription="@null"/>
        <ImageView
            android:id="@+id/iv_item_voice_search_result_play"
            android:layout_width="@dimen/main_video_play_icon_size"
            android:layout_height="@dimen/main_video_play_icon_size"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_video_play"
            android:contentDescription="@null"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tv_item_voice_search_result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/contentPadding_level3"
            android:layout_marginStart="@dimen/contentPadding_level3"
            android:textSize="@dimen/textSize_level8"
            android:textColor="@color/colorTextBlack"
            android:maxLines="1"
            android:text="XXXXxXXXXXXX"/>
        <TextView
            android:id="@+id/tv_item_voice_search_result_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/contentPadding_level3"
            android:layout_marginStart="@dimen/contentPadding_level3"
            android:textSize="@dimen/textSize_level6"
            android:textColor="@color/colorTextGray"
            android:maxLines="2"
            android:text="XXXXXXXXXXX"/>
    </LinearLayout>
</LinearLayout>