<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/contentPadding_level4"
        android:paddingRight="@dimen/contentPadding_level4"
        android:paddingTop="@dimen/contentPadding_level2"
        android:paddingBottom="@dimen/contentPadding_level2"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:textSize="@dimen/textSize_level4"
            android:background="@color/colorTextGray"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/contentPadding_level4"
            android:layout_marginStart="@dimen/contentPadding_level4"
            android:layout_marginRight="@dimen/contentPadding_level4"
            android:layout_marginEnd="@dimen/contentPadding_level4"
            android:maxLines="2"
            android:minLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/textSize_level4"
            android:textColor="@color/text_color_black"
            android:text="绝对真金 市场最低价 100g每条 标题内容最多侠士两行"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
