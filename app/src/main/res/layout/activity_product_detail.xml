                        android:layout_marginStart="@dimen/contentPadding_level6"
                        android:textSize="@dimen/textSize_level4"
                        android:textColor="@color/colorTextRed"
                        android:minEms="2"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/contentPadding_level4"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/textSize_level5"
                    android:text="@string/str_image_text_detail_label"/>
                <LinearLayout
                    android:id="@+id/ll_product_detail_loading"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
