<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/contentPadding_level4"
    android:background="@color/colorWhite"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <ImageView
        android:id="@+id/iv_recommended_product_pager_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/contentPadding_level4"
        android:scaleType="fitCenter"
        android:src="@drawable/default_img"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/tv_recommended_product_pager_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/contentPadding_level3"
        android:layout_marginBottom="@dimen/contentPadding_level3"
        android:textSize="@dimen/textSize_level7"
        android:textColor="@color/colorTextBlack"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:ellipsize="end"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/contentPadding_level3"
        android:gravity="center">
        <!--<TextView-->
            <!--android:id="@+id/tv_recommended_product_pager_currency"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textStyle="bold"-->
            <!--android:textSize="@dimen/textSize_level2"-->
            <!--android:textColor="@color/colorTextRed"-->
            <!--android:text="@string/str_currency_rmb"/>-->
        <TextView
            android:id="@+id/tv_recommended_product_pager_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/contentPadding_level2"
            android:textStyle="bold"
            android:textSize="@dimen/textSize_level11"
            android:textColor="@color/colorTextRed"/>
    </LinearLayout>
</LinearLayout>