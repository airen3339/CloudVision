<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/contentPadding_level6"
    android:background="@drawable/layer_list_bg_product_list_view">

    <ImageView
        android:id="@+id/iv_item_product_grid_view_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/contentPadding_level6"
        android:scaleType="fitCenter"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/tv_item_product_grid_view_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/contentPadding_level3"
        android:layout_marginBottom="@dimen/contentPadding_level3"
        android:textSize="@dimen/textSize_level8"
        android:textColor="@color/colorTextBlack"
        android:gravity="center_horizontal"
        android:minLines="2"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="中国黄金500g,绝对真金，柜金真金，柜台验货，带证书"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/contentPadding_level3"
        android:gravity="top|center_horizontal">
        <!--<TextView-->
            <!--android:id="@+id/tv_item_product_grid_view_currency"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="@dimen/textSize_level3"-->
            <!--android:textColor="@color/colorTextRed"-->
            <!--android:text="@string/str_currency_rmb"/>-->
        <TextView
            android:id="@+id/tv_item_product_grid_view_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/contentPadding_level2"
            android:layout_marginStart="@dimen/contentPadding_level2"
            android:textStyle="bold"
            android:textSize="@dimen/textSize_level10"
            android:textColor="@color/colorTextRed"
            android:text="100"/>
    </LinearLayout>
</LinearLayout>