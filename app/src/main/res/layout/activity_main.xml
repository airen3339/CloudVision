<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_main_top_bar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/contentPadding_level5"
            android:background="@drawable/bg_main_top_bar">
            <TextView
                android:id="@+id/tv_main_top_bar_time"
                style="@style/MainTopBarTextTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="2016/09/15 21:37:22"/>
            <TextView
                style="@style/MainTopBarTextTheme"
                android:id="@+id/tv_main_top_bar_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="佛山"/>
            <TextView
                android:id="@+id/tv_main_top_bar_weather"
                style="@style/MainTopBarTextTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/ic_weather_lot_cloud"
                android:drawablePadding="@dimen/contentPadding_level6"
                android:text="晴 33℃~36℃"/>
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/ll_main_content1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_main_content1_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_activate"
                android:contentDescription="@null"/>
            <ImageView
                style="@style/PlayIconTheme"
                android:id="@+id/iv_main_content1_video_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"/>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorWhite" />
        <FrameLayout
            android:id="@+id/ll_main_content2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_main_content2_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_activate"
                android:contentDescription="@null"/>
            <ImageView
                style="@style/PlayIconTheme"
                android:id="@+id/iv_main_content2_video_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"/>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorWhite" />
        <FrameLayout
            android:id="@+id/ll_main_content3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_main_content3_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_activate"
                android:contentDescription="@null"/>
            <ImageView
                style="@style/PlayIconTheme"
                android:id="@+id/iv_main_content3_video_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"/>
        </FrameLayout>
        <LinearLayout
            android:id="@+id/ll_main_bottom_bar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:padding="@dimen/contentPadding_level3"
            android:gravity="center_vertical"
            android:background="@color/darkGray">
            <TextView
                android:id="@+id/tv_main_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_notice"
                android:drawablePadding="@dimen/contentPadding_level5"
                android:textSize="@dimen/textSize_level6"
                android:textColor="@color/text_color_white"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_main_menu_bar"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/main_menu_marginTop">
        <ToggleButton
            android:id="@+id/tbtn_main_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/main_menu_btn_width"
            android:minHeight="@dimen/main_menu_btn_width"
            android:maxWidth="@dimen/main_menu_btn_width"
            android:maxHeight="@dimen/main_menu_btn_width"
            android:padding="@dimen/contentPadding_level3"
            android:layout_gravity="center"
            android:background="@drawable/layer_list_bg_main_menu"
            android:button="@null"
            android:textOn="@null"
            android:textOff="@null"
            android:drawableTop="@drawable/selector_ic_main_menu"
            android:gravity="center"
            android:checked="false"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_main_menu_items"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/layer_list_bg_main_menu_items"
                android:visibility="gone">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/contentPadding_level4"
                    android:layout_marginRight="@dimen/contentPadding_level4"
                    android:background="@color/colorMainMenuBorder"/>
                <CheckBox
                    style="@style/MainMenuItemTheme"
                    android:id="@+id/cb_main_menu_vice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:button="@null"
                    android:drawableTop="@drawable/selector_ic_main_menu_voice"
                    android:text="@string/str_voice_vertical"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/contentPadding_level4"
                    android:layout_marginRight="@dimen/contentPadding_level4"
                    android:background="@color/colorMainMenuBorder"/>

                <Button
                    style="@style/MainMenuItemTheme"
                    android:id="@+id/btn_main_menu_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableTop="@drawable/selector_ic_main_menu_home"
                    android:text="@string/str_home_vertical" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/contentPadding_level4"
                    android:layout_marginRight="@dimen/contentPadding_level4"
                    android:background="@color/colorMainMenuBorder"/>

                <CheckBox
                    style="@style/MainMenuItemTheme"
                    android:id="@+id/cb_main_menu_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:button="@null"
                    android:drawableTop="@drawable/selector_ic_main_menu_setting"
                    android:text="@string/str_setting_vertical" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
