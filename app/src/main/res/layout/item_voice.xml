<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/contentPadding_level4"
    android:paddingTop="@dimen/contentPadding_level6"
    android:paddingRight="@dimen/contentPadding_level4"
    android:paddingBottom="@dimen/contentPadding_level6">

    <LinearLayout
        android:id="@+id/ll_item_voice_android_content"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:weightSum="3"
        android:visibility="gone">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="start|top">
            <TextView
                android:id="@+id/tv_item_voice_android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/contentPadding_level6"
                android:layout_marginRight="@dimen/contentPadding_level6"
                android:background="@drawable/shape_bg_voice_android"
                android:textSize="@dimen/textSize_level7"
                android:textColor="@color/colorTextBlack"/>
            <ImageView
                android:layout_width="@dimen/voice_android_icon_size"
                android:layout_height="@dimen/voice_android_icon_size"
                android:layout_gravity="center_vertical"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_item_voice_human_content"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/contentPadding_level4"
        android:layout_marginRight="@dimen/contentPadding_level4"
        android:gravity="end"
        android:weightSum="3"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end">
            <TextView
                android:id="@+id/tv_item_voice_human"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_voice_human"
                android:textSize="@dimen/textSize_level7"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>